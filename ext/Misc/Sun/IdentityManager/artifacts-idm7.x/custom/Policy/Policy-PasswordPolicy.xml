<Policy id='#ID#POLICY:Custom-PasswordPolicy' name='Custom - Password Policy' class='com.waveset.policy.StringQualityPolicy'>
  <GeoAttributes>  <Object>
    <Attribute name='Maximum Length'>
      <Integer>12</Integer>
    </Attribute>
    <Attribute name='Minimum Alpha'>
      <Integer>1</Integer>
    </Attribute>
    <Attribute name='Minimum Begin Alpha'>
      <Integer>1</Integer>
    </Attribute>
    <Attribute name='Minimum Length'>
      <Integer>6</Integer>
    </Attribute>
    <Attribute name='Minimum Lowercase'>
      <Integer>1</Integer>
    </Attribute>
    <Attribute name='Minimum Number of Character Type Rules That Must Pass'>
      <Integer>0</Integer>
    </Attribute>
    <Attribute name='Minimum Numeric'>
      <Integer>1</Integer>
    </Attribute>
    <Attribute name='Minimum Uppercase'>
      <Integer>1</Integer>
    </Attribute>
    <Attribute name='Must Not Contain'>
      <List>
        <String>accountId</String>
        <String>email</String>
        <String>firstname</String>
        <String>fullname</String>
        <String>lastname</String>
      </List>
    </Attribute>
    <Attribute name='String Type' value='Password'/>
  </Object>
</GeoAttributes>
  <MemberObjectGroups>
    <ObjectRef type='ObjectGroup' id='#ID#All' name='All'/>
  </MemberObjectGroups>
</Policy>

